@* This is the master page for all pages it essentially establishes the footer and header layout *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Copiosis Application</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <link href="/Content/bootstrap.css" rel="stylesheet">
    <link href="/Content/bootstrap-theme.css" rel="stylesheet">
    <link href="/Content/site.css" rel="stylesheet">
    <link href="/Content/master.css" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale= 1" />
    <script src="/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/jquery-1.11.2.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-default" role="navigation">
        <div id="navbarContainer" class="container">
            <div class="row">
                <div id="navbarHeader" class="navbar-header" style="padding-bottom:10px;">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Copiosis", "Index", "Home", null, new { @class = "navbar-brand" })
                </div>
                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul id="customNav" class="nav navbar-nav text-right pull-right">
                        @Html.Partial("_LoginPartial")
                    </ul>
                </div>
                ﻿@if (Request.IsAuthenticated)
                {
                    @Html.Partial("_UserNBR");
                }
            </div>
        </div>
    </nav>

    <div id="body">
        @RenderSection("featured", required: false)
        <div class="container">
            @RenderBody()
        </div>
    </div>
    <footer>
        <div class="container">
            <div class="row">
                <p>&copy; @DateTime.Now.Year - Copiosis</p>
            </div>
        </div>
    </footer>
</body>
</html>

@* Include javascript files that will be used across pages *@
@section Scripts {
    <script src="/Scripts/jquery-1.11.2.min.js"></script>
    <script src="/Scripts/bootstrap.min.js"></script>

    @RenderSection("scripts", required: false)
}