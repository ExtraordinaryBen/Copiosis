@* This is the master page for all pages it essentially establishes the footer and header layout *@
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>Copiosis Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <link href="/Content/bootstrap.css" rel="stylesheet">
        <link href="/Content/bootstrap-theme.css" rel="stylesheet">
        <link href="/Content/site.css" rel="stylesheet">
        <meta name="viewport" content="width=device-width" />
        <script src="/Scripts/modernizr-2.6.2.js"></script>
    </head>
    <body>
        @* Check if logged in, and display the full navigation if user is logged in*@
@if (Request.IsAuthenticated)
{
    <header>
        <div class="content-wrapper">
            <div class="float-left">
                <p class="site-title">@Html.ActionLink("Copiosis", "Index", "Home")</p>
            </div>
            <div class="float-right">
                <section id="login"></section>
                <nav>
                    <ul id="menu">@Html.Partial("_LoginPartial")</ul>
                    <ul id="menu">
                        <li>@Html.ActionLink("Transaction Overview", "Overview", "Account")</li>
                        <li>@Html.ActionLink("Item Management", "Items", "Account")</li>
                        <li>@Html.ActionLink("Consumer Form", "Contact", "Home")</li>
                        <li class="last">@Html.ActionLink("Producer Form", "Contact", "Home")</li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>
}
@*If user is not logged in, display the simple navigation*@
else
{

    <header>
        <div class="content-wrapper">
            <div class="float-left">
                <p class="site-title">@Html.ActionLink("Copiosis", "Index", "Home")</p>
            </div>
            <div class="float-right">
                <nav>
                    <ul id="menu">
                        @Html.Partial("_LoginPartial")
                        <li class="last">@Html.ActionLink("About Copiosis", "About", "Home")</li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>

}
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - Copiosis</p>
                </div>
            </div>
        </footer>

    </body>
@* Include javascript files that will be used across pages *@
<script src="/Scripts/jquery-1.11.2.min.js"></script>
<script src="/Scripts/bootstrap.min.js"></script>
@RenderSection("scripts", required: false)
</html>
