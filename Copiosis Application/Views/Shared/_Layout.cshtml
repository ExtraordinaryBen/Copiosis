@* This is the master page for all pages it essentially establishes the footer and header layout *@
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>Copiosis Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <link href="/Content/bootstrap.css" rel="stylesheet">
        <link href="/Content/bootstrap-theme.css" rel="stylesheet">
        <link href="/Content/site.css" rel="stylesheet">
        <link href="/Content/master.css" rel="stylesheet">
        <meta name="viewport" content="width=device-width, initial-scale= 1" />
        <script src="/Scripts/modernizr-2.6.2.js"></script>
    </head>
<body>
    @* Display the full navigation if user is logged in*@
    @if (Request.IsAuthenticated)
    {
        <header>
            <div class="container-fluid">
                <div class="content-wrapper">
                    <div class="row">
                        <div class="col-md-4">
                            <p class="title">@Html.ActionLink("Copiosis", "Index", "Home", null, new { @class = "title" })</p>
                        </div>
                        @Html.Partial("_LoginPartial")
                        <div class="col-sm-2">@Html.ActionLink("Transaction Overview", "Overview", "Account")</div>
                        <div class="col-sm-2">@Html.ActionLink("Item Management", "Items", "Account")</div>
                        <div class="col-sm-2">@Html.ActionLink("Consumer Form", "Contact", "Home")</div>
                        <div class="col-sm-2">@Html.ActionLink("Producer Form", "Contact", "Home")</div>
                    </div>
                </div>
            </div>
        </header>
    }
    @*If user is not logged in, display the simple navigation*@
    else
    {

        <header>
            <div class="container-fluid">
                <div class="content-wrapper">
                    <div class="row nav-header">
                        <div class="col-md-2"><p class="title">@Html.ActionLink("Copiosis", "Index", "Home", null, new { @class = "title" })</p></div>
                        @Html.Partial("_LoginPartial")
                    </div>
                </div>
            </div>
        </header>

    }
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - Copiosis</p>
            </div>
        </div>
    </footer>
</body>
@* Include javascript files that will be used across pages *@
<script src="/Scripts/jquery-1.11.2.min.js"></script>
<script src="/Scripts/bootstrap.min.js"></script>
@RenderSection("scripts", required: false)
</html>
