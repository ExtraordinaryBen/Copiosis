@model Copiosis_Application.Models.AccountManagerModel

@Html.Partial("_ManageAccountPartial")



@section Scripts {

<script type="text/javascript">
    $(document).ready(function () {
        $('#confirm-label').hide();
        $('#confirm-pw').hide();
        $('#confirm-info').hide();
        $('#new-pw').on('keyup', function () {
            var newPwValue = $("#new-pw").val();
            var confirmPwValue = $('#confirm-pw').val();
            if (newPwValue != '') {
                $('#confirm-label').fadeIn();
                $('#confirm-pw').fadeIn();
                $('#confirm-info').fadeIn();
                $('#confirm-pw').attr('disable', false);
            } else {
                $('#confirm-label').fadeOut();
                $('#confirm-pw').fadeOut();
                $('#confirm-info').fadeOut();
                document.getElementById("confirm-pw").value = "";
            }
        });
    });
</script>
    @Scripts.Render("~/bundles/jqueryval")
}
