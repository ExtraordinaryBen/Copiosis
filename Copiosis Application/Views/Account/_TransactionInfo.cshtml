@model Copiosis_Application.Models.TransactionModel
<div class="row">
    <div class="col-lg-6 col-md-6 col-xs-12">
        <p><strong>Producer:</strong> @Model.providerFirstName @Model.providerLastName</p>
        <p><strong>Consumer:</strong> @Model.receiverFirstName @Model.receiverLastName</p>
        <p><strong>Product/Service:</strong> @Model.productName</p>
    </div>
    <div class="col-lg-6 col-md-6 col-xs-12">
        <p><strong>Date Created:</strong> @Model.dateAdded</p>
        @if (Model.dateClosed != DateTime.MinValue)
        {
            <p><strong>Date Complete:</strong> @Model.dateClosed</p>
        }
        <p><strong>Product Gateway:</strong> @Model.productGateway</p>
        @if (Model.status.CompareTo("PENDING") != 0)
        {
            <p>
                <strong>Transaction Status:</strong>
                @if (Model.status.CompareTo("Rejected") == 0)
                {
                    <span style="font-weight:bold; color:red">@Model.status</span>
                }
                else if (Model.status.CompareTo("Confirmed") == 0)
                {
                    <span style="font-weight:bold; color:#33CC33">@Model.status</span>
                }
            </p>
        }
    </div>
</div>