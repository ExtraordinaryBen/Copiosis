@model List<Copiosis_Application.Models.ItemsModel>
@* Page for listing the items (products) associated with the currently logged in user *@
<div class="row">
    <h1>Item Library</h1>
    <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12">
            <h3>Previously Created Items</h3>
            @{ 
                @* detemine if model list has data available *@
                bool hasItems = Model.Count() > 0;

                @* No items in library *@
                if (!hasItems)
                {
                    <h4>No Items In Library</h4>
                }
                @* Items available to display *@
                else { 
                    <div class="table-responsive">
                        <table data-link="row" class="table table-bordered table-hover table-striped">
                            <thead>
                                <tr>
                                    <th>Item Name</th>
                                    <th>Description</th>
                                    <th>Gateway</th>
                                    <th>Item Class</th>
                                </tr>                        
                            </thead>
                            <tbody>
                                @* Need to make rows selectable and track which one is selected
                                    for passing to edit or delete*@
                                @foreach (var item in Model)
                                {
                                    <tr id="@item.ItemGuid">
                                        <td>@item.ProductName</td>
                                        <td>@item.Description</td>
                                        <td>@item.Gateway</td>
                                        <td>@item.ItemClass</td>
                                    </tr>                                                           
                                }    
                            </tbody>
                        </table>
                    </div>
                }
                @* Library has Items so display all available option buttons *@
                if (hasItems) { 
                    <div class="btn-group col-md-3 col-sm-4 col-xs-5 col-md-offset-9 col-sm-offset-8 col-xs-offset-7">
                        <button type="button" class="btn" onclick="location.href='@Url.Action("AddItem","Account")'">Create</button>
                        <button type="button" class="btn">Delete</button>
                        <button type="button" class="btn">Edit</button>
                    </div>
                }
                @* Library is empty so only include the create button*@
                else
                {
                    <div class="btn-group col-md-3 col-sm-4 col-xs-5 col-md-offset-9 col-sm-offset-8 col-xs-offset-7">
                        <button type="button" class="btn" onclick="location.href='@Url.Action("AddItem","Account")'">Create Item</button>
                    </div>
                }
            }            
        </div>
    </div>
</div>

