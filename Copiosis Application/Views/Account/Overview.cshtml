@model Copiosis_Application.Models.TransactionOverviewModel
<div class="row">
    <h1>Transction Overview</h1>
    <div class="row">
        <div class="col2-sm-12 col-md-12 col-lg-12">
            <h3>Pending Personal Transactions Awaiting Your Approval</h3>
            <div class="table-responsive">
                <table data-link="row" class="table table-bordered table-hover table-striped">
                    <thead>
                        <tr>
                            <th>Item Type</th>
                            <th>Service/Item Name</th>
                            <th>Date Created</th>
                            <th>Date Completed</th>
                            <th>Other Party</th>
                            <th>NBR Reward</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.pendingUser)
                        {
                        <tr>
                            <td>@item.productName</td>
                            <td>@item.productDesc</td>
                            <td>@item.date</td>
                            <td>@item.dateClosed</td>
                            <td>@item.receiverFirstName @item.receiverLastName</td>
                            <td>@item.nbr</td>
                        </tr>
                        }
                    </tbody> 
                </table>
            </div>
        </div>
    </div>
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-12">
                <h3>Pending Requested Transactions Awaiting Other Parties Approval</h3>
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-striped">
                        <thead>
                            <tr>
                                <th>Item Type</th>
                                <th>Service/Item Name</th>
                                <th>Date Created</th>
                                <th>Date Completed</th>
                                <th>Other Party</th>
                                <th>NBR Reward</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.pendingOther)
                            {
                            <tr>
                                <td>@item.status</td>
                                <td>two</td>
                                <td>three</td>
                                <td>four</td>
                                <td>five</td>
                                <td>six</td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12">
            <h3>Completed Transactions</h3>
            <div class="table-responsive">
                <table class="table table-bordered table-hover table-striped">
                    <thead>
                        <tr>
                            <th>Item Type</th>
                            <th>Service/Item Name</th>
                            <th>Date Created</th>
                            <th>Date Completed</th>
                            <th>Other Party</th>
                            <th>NBR Reward</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.completed)
                        {
                            <tr>
                                <td>@item.status</td>
                                <td>two</td>
                                <td>three</td>
                                <td>four</td>
                                <td>five</td>
                                <td>six</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>