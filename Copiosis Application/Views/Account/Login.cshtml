@model Copiosis_Application.Models.LoginModel

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h2 id="copiosis_login" class="text-center">Copiosis Log In</h2>
        @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
        {
            @Html.AntiForgeryToken()
            @Html.Partial("ValidationSummary", ViewData.ModelState)

            @*User Name*@
            <div class="form-group">
                @Html.LabelFor(m => m.UserName, new { @class = "col-sm-3 control-label" })
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control form-control-6" })
                @Html.ValidationMessageFor(m => m.UserName)
            </div>
            @*Password*@
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "col-sm-3 control-label" })
                @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-6" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
            @*Remember Me*@
            <!--<div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <div class="checkbox">
                        @Html.CheckBoxFor(m => m.RememberMe)
                        <label>
                            @Html.LabelFor(m => m.RememberMe)
                        </label>
                    </div>
                </div>
            </div>-->
            @*Submit button*@
            <div class="form-group">
                <button type="submit" class="btn btn-default center-block">Sign in</button>
            </div>
            @*Register link*@
            <div class="form-group">
                <p class="text-center">@Html.ActionLink("Register", "Register") if you do not have an account.</p>
            </div>
        }
    </div>
</div>
