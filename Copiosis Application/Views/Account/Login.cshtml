@model Copiosis_Application.Models.LoginModel

<div class="row">
    <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-xs-6 col-xs-offset-3">
        <h2 id="copiosis_login" class="text-center">Copiosis Log In</h2>
        @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
        {
            @Html.AntiForgeryToken()
            @Html.Partial("ValidationSummary", ViewData.ModelState)

            @*User Name*@
            <div class="form-group">
                <div class="col-lg-3 col-md-3 col-xs-12">
                    @Html.LabelFor(m => m.UserName, new { @class = "control-label login-label" })
                </div>
                <div class="col-lg-9 col-md-9 col-xs-12 login-group">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control login-control" })
                </div>
            </div>
            @*Password*@
            <div class="form-group">
                <div class="col-lg-3 col-md-3 col-xs-12">
                    @Html.LabelFor(m => m.Password, new { @class = "control-label login-label" })
                </div>
                <div class="col-lg-9 col-md-9 col-xs-12 login-group">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>
            </div>
            @*Submit button*@
            <div class="form-group">
                <div class="col-lg-12 col-md-12 col-xs-12">
                    <button type="submit" class="btn btn-default center-block">Sign in</button>
                </div>
            </div>
            @*Register link*@
            <div class="form-group">
                <div class="col-lg-12 col-md-12 col-xs-12">
                   <br /> <p class="text-center" style="font-weight:bold;">@Html.ActionLink("Register", "Register", null, new { @id = "registerSentence" }) if you do not have an account.</p>
                </div>
            </div>
        }
    </div>
</div>
<script>
    $('#loginLink').addClass('active');
</script>