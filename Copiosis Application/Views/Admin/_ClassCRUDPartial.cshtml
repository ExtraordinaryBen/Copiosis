            <h1>Class Management</h1>
        </div>
        <div class="col-lg-6 col-md-7 col-sm-7 col-xs-12">
            @Html.Partial("_AdminMenu")
        </div>
    </div>
</div>

<div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-xs-6 col-xs-offset-3" style="margin-top: 20px">
    @if (ViewContext.RouteData.Values.ContainsValue("EditClass") == true)
    { 
        <h2 id="add-item-title" class="text-center">Edit A Class</h2>
        <script>$('#editClassesNav').addClass('active');</script>
    }
    else if (ViewContext.RouteData.Values.ContainsValue("AddClass") == true)
    {
        <h2 id="add-item-title" class="text-center">Create A Class</h2>
        <script>$('#addClassNav').addClass('active');</script>
    }

