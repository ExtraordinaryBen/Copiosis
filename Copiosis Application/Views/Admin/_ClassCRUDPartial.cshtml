                </div>
                <div class="col-lg-4 col-md-4 col-xs-12">
                    @Html.TextBoxFor(m => m.name, new { @class = "form-control", @placeholder = "Name", @id = "name" , @data_toggle = "tooltip", @data_original_title = "Item classes require a unique name"})
                    @Html.ValidationMessageFor(m => m.name)
